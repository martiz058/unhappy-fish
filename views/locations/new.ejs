<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UnhappyFish</title>
    <link rel="icon" sizes="32x32" href="/data/images/shark.png" type=" image/png">

    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!--Custom-->
    <link rel="stylesheet" href="/stylesheet/myCardStyle.css">
    <link rel="stylesheet" href="/stylesheet/myStyle.css">
    <link rel="stylesheet" href="/stylesheet/navbarStyle.css">

    <!--JS possible Issue-->
    <section>
        <% function getRandomImage() { const max=imageUrls.length; const image=imageUrls[Math.floor(Math.random() *
            (max))]; return image; } %>

            <% const imageUrls=[ "/data/images/fish-0.png" , "/data/images/fish-1.png" , "/data/images/fish-2.png"
                , "/data/images/fish-3.png" , "/data/images/fish-4.png" , "/data/images/fish-5.png"
                , "/data/images/fish-6.png" , "/data/images/fish-7.png" , ]; %>
    </section>
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <!-- Navbar -->
        <%- include('../partials/navbar') -%>
    </header>

    <!--flash-->
    <section>
        <%- include('../partials/flash') -%>
    </section>

    <main id="main" class="m-5">
        <section class="card" style="width: 60%; margin: 0 auto;">
            <h3 class=" card-header text-center">Uplaod New Images</h3>
            <form class="needs-validation m-4" action="/locations" method="post" enctype="multipart/form-data"
                novalidate>
                <div class="mb-3">
                    <label class="form-label" for="siteName">Site Name</label>
                    <input class="form-control" type="text" id="siteName" name="siteName" placeholder="Site Name"
                        minlength="3" maxlength="30" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Site Name must be 3-30 characters
                    </div>
                </div>

                <!--UI Error Here-->
                <div class="mb-3">
                    <label class="form-label" for="locationSearch">Location</label>
                    <div>
                        <mapbox-search-box id="locationSearch" access-token="<%= process.env.MAPBOX_TOKEN %>"
                            proximity="0,0"></mapbox-search-box>
                    </div>
                    <input class="form-control" type="hidden" id="location" name="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please select a location.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="description"
                        placeholder="Description" minlength="3" maxlength="300" required></textarea>
                    <div class=" valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        description must be 3-300 characters
                    </div>
                </div>

                <div class="mb-3">
                    <p>Upload Images:</p>
                    <label for="images"></label>
                    <input type="file" id="images" name="images" accept="image/png, image/jpeg, image/jpg" multiple
                        required />
                    <div class=" valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        At most 5 images
                    </div>
                </div>

                <br>
                <hr>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
                    <a href="/locations" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-light mt-auto py-3">
        <p>&copy; 2024 UnhappyFish. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

    <!--Custom-->
    <script src="/javascripts/utils.js"></script>
    <script>
        changeNavbarColorOnScroll('main', 'black', 'rgba(0, 0, 0, 0.7)');
    </script>
    <script id="search-js" defer src="https://api.mapbox.com/search-js/v1.0.0-beta.21/web.js"></script>
    <script src="/javascripts/checkFormBootstrap.js"></script>
    <script src="/javascripts/imageFormCheck.js"></script>
    <script src="/javascripts/stringifyQueryString.js"></script>
</body>

</html>