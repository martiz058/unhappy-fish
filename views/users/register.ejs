<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UnhappyFish</title>
    <link rel="icon" sizes="32x32" href="/data/images/shark.png" type=" image/png">

    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <!--Custom-->
    <link rel="stylesheet" href="/stylesheet/myCardStyle.css">
    <link rel="stylesheet" href="/stylesheet/myStyle.css">
    <link rel="stylesheet" href="/stylesheet/navbarStyle.css">

    <!--JS possible Issue-->
    <section>
        <% function getRandomImage() { const max=imageUrls.length; const image=imageUrls[Math.floor(Math.random() *
            (max))]; return image; } %>

            <% const imageUrls=[ "/data/images/fish-0.png" , "/data/images/fish-1.png" , "/data/images/fish-2.png"
                , "/data/images/fish-3.png" , "/data/images/fish-4.png" , "/data/images/fish-5.png"
                , "/data/images/fish-6.png" , "/data/images/fish-7.png" , ]; %>
    </section>
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <!-- Navbar -->
        <%- include('../partials/navbar') -%>
    </header>

    <!--flash-->
    <section>
        <%- include('../partials/flash') -%>
    </section>

    <main id="main" class="m-5">
        <section class="showcase card" style="width: 30%; margin: 0 auto;">
            <h3 class=" card-header text-center">Create account</h3>
            <form class="needs-validation m-4" action="/register" method="post" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" placeholder="Username"
                        minlength="3" maxlength="30" autocomplete="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Username must be 3-30 characters
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="Email" minlength="3"
                        maxlength="30" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid 'email'
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" placeholder="Password"
                        minlength="3" maxlength="30" autocomplete="current-password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        password must be 3-30 characters
                    </div>
                </div>
                <hr>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
                </div>
            </form>

            <div class="divider mb-4">Already have an account?</div>
            <div class="d-flex justify-content-center mb-4">
                <a href="/login">Sigin in </a>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-light mt-auto py-3">
        <p>&copy; 2024 UnhappyFish. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

    <!--Custom-->
    <script src="/javascripts/utils.js"></script>
    <script>
        changeNavbarColorOnScroll('main', 'black', 'rgba(0, 0, 0, 0.7)');
    </script>
    <script src="/javascripts/checkFormBootstrap.js"></script>
</body>

</html>