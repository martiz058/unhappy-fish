<% layout('layouts/boilerplate')%>
    <section id="main" class="container-one fontChange">
        <div class="row">
            <!-- Column 1: Portrait Image -->
            <div class="col-lg-3 col-md-4 col-sm-12 text-center">
                <div class="info-image-container">
                    <img src="/data/images/fish-0.png" alt="fish-0.png" class="info-portrait">
                </div>
            </div>

            <!-- Column 2: Register Form -->
            <div class="col-lg-6 col-md-4 col-sm-12">
                <div class="card m-5" style="border-radius: 20px;">
                    <div class="card-header text-center pt-3">
                        <h3>Create Account</h3>
                    </div>

                    <div class="card-body">
                        <form class="needs-validation mx-4" action="/register" method="post" novalidate>
                            <!-- Username -->
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username"
                                    placeholder="Username" minlength="3" maxlength="30" autocomplete="username"
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Username must be 3-30 characters.
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                                    minlength="3" maxlength="30" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please provide a valid email.
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="mb-4">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Password" minlength="3" maxlength="30" autocomplete="current-password"
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Password must be 3-30 characters.
                                </div>
                            </div>

                            <!-- Button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- Divider -->
                    <div class="text-center mb-4">
                        <div class="card-divider m-3">Already have an account?</div>
                        <a href="/login">Sign in</a>
                    </div>
                </div>
            </div>

            <!-- Column 3: Portrait Image -->
            <div class="col-lg-3 col-md-4 col-sm-12 text-center">
                <div class="info-image-container">
                    <img src="/data/images/fish-2.png" alt="fish-2.png" class="info-portrait">
                </div>
            </div>
        </div>
    </section>

    <!--Javascripts-->
    <script src="/javascripts/checkFormBootstrap.js"></script>