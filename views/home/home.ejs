    <script>
        // Updated: JavaScript to adjust navbar transparency and animation
        document.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            const heroSection = document.querySelector('.hero');
            const heroBottom = heroSection.getBoundingClientRect().bottom;
            const scrollPosition = window.scrollY;
            const opacity = Math.min((scrollPosition - heroBottom) / 300, 1); // Adjust the divisor to control speed

            if (scrollPosition < heroBottom) {
                // Navbar is over the hero section
                navbar.style.backgroundColor = `rgba(0, 0, 0, ${0})`; // Transparent
            } else {
                // Navbar has scrolled past the hero section
                navbar.style.backgroundColor = `rgba(0, 0, 0, ${opacity})`; // Gradually darkens
